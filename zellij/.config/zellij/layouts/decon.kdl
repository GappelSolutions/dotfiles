layout {
    cwd "~/dev/decon/"

    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
    }

    tab name="1-agent" {
        pane split_direction="vertical" {
            pane split_direction="horizontal" {
                pane command="claude" {
                    args "--dangerously-skip-permissions"
                }
                pane command="claude" {
                    args "--dangerously-skip-permissions"
                }
            }
            pane split_direction="horizontal" {
                pane command="claude" {
                    args "--dangerously-skip-permissions"
                }
                pane command="claude" {
                    args "--dangerously-skip-permissions"
                }
            }
        }
    }

    tab name="2-tools" cwd="app" {
        pane split_direction="vertical" {
            pane size="40%" split_direction="horizontal" {
                pane size="50%" focus=true start_suspended=true command="/opt/homebrew/share/flutter/bin/flutter" {
                    args "run"
                }
                pane size="50%" command="adb-auto-connect"
            }

            pane size="60%" split_direction="horizontal" {
                pane size="50%" command="yazi" {
                    args "~/dev/decon"
                }

                pane size="50%"
            }
        }
    }

    tab name="3-nvim" cwd="app" {
        pane borderless=true command="/Users/cgpp/.local/share/bob/nvim-bin/nvim"
    }

    tab name="4" { pane; }
    tab name="5" { pane; }
    tab name="6" { pane; }
    tab name="7" { pane; }
    tab name="8" { pane; }
    tab name="9" { pane; }
    tab name="0" { pane; }
}

scrollback_editor "/Users/cgpp/.local/share/bob/nvim-bin/nvim"
default_mode "locked"
