layout {
    cwd "~/dev/gappel-cloud/"

    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
    }

    tab name="1-agent" {
        pane split_direction="vertical" {
            pane split_direction="horizontal" {
                pane borderless=true command="claude" {
                    args "--dangerously-skip-permissions"
                }
                pane borderless=true command="claude" {
                    args "--dangerously-skip-permissions"
                }
            }
            pane split_direction="horizontal" {
                pane borderless=true command="claude" {
                    args "--dangerously-skip-permissions"
                }
                pane borderless=true command="claude" {
                    args "--dangerously-skip-permissions"
                }
            }
        }
    }

    tab name="2-front-nvim" cwd="src/frontend" {
        pane borderless=true command="/Users/cgpp/.local/share/bob/nvim-bin/nvim"
    }

    tab name="3-back-nvim" cwd="src/backend/GappelCloud.Api" {
        pane borderless=true command="/Users/cgpp/.local/share/bob/nvim-bin/nvim"
    }

    tab name="4" { pane; }
    tab name="5" { pane; }
    tab name="6" { pane; }
    tab name="7" { pane; }

    tab name="8-ssh" cwd="~/dev/gappel-cloud" {
        pane borderless=true command="ssh" {
            args "cgpp@192.168.178.33"
        }
    }

    tab name="9-repo-nvim" cwd="~/dev/gappel-cloud" {
        pane borderless=true command="/Users/cgpp/.local/share/bob/nvim-bin/nvim"
    }

    tab name="0-back-tools" cwd="src/backend/GappelCloud.Api" {
        pane split_direction="vertical" {
            pane size="60%" split_direction="horizontal" {
                pane size="50%" command="yazi" {
                    args "~/dev/gappel-cloud/src/backend/GappelCloud.Api"
                }

                pane size="50%" command="lazydocker"
            }

            pane size="40%" split_direction="horizontal" {
                pane size="50%" focus=true start_suspended=true command="dotnet" {
                    args "run"
                }
                pane size="50%"
            }
        }
    }
}

scrollback_editor "/Users/cgpp/.local/share/bob/nvim-bin/nvim"
default_mode "locked"
