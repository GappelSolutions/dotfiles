layout {
    cwd "~/dev/macos-screensaver/"

    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
    }

    tab name="agent" {
        pane borderless=true command="claude" {
            args "--dangerously-skip-permissions"
        }
    }

    tab name="rust-nvim" {
        pane borderless=true command="/Users/cgpp/.local/share/bob/nvim-bin/nvim"
    }

    tab name="rust-tools" {
        pane split_direction="vertical" {
            pane size="58%" split_direction="horizontal" {
                pane command="yazi" {
                    args "~/dev/macos-screensaver/"
                }

                pane cwd="~/dev/macos-screensaver/"
            }

            pane size="42%" split_direction="horizontal" {
                pane focus=true command="cargo" start_suspended=true {
                    args "run"
               }

                pane command="cargo" start_suspended=true {
                    args "check"
                }

                pane command="cargo" start_suspended=true {
                    args "test"
                }
            }
        }
    }

    tab
    tab
}

scrollback_editor "/Users/cgpp/.local/share/bob/nvim-bin/nvim"
default_mode "locked"
