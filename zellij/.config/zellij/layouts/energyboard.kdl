layout {
    cwd "~/dev"

    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
    }

    tab name="1-agent" {
        pane split_direction="vertical" {
            pane split_direction="horizontal" {
                pane cwd="CustomerPortal.Angular" command="claude" {
                    args "--dangerously-skip-permissions" "--add-dir" "../CustomerPortal.WebAPI" "--add-dir" "../ANGULAR-STACK" "--add-dir" "../Repower.Lib.Shared"
                }
                pane cwd="CustomerPortal.Angular" command="claude" {
                    args "--dangerously-skip-permissions" "--add-dir" "../CustomerPortal.WebAPI" "--add-dir" "../ANGULAR-STACK" "--add-dir" "../Repower.Lib.Shared"
                }
            }
            pane split_direction="horizontal" {
                pane cwd="CustomerPortal.Angular" command="claude" {
                    args "--dangerously-skip-permissions" "--add-dir" "../CustomerPortal.WebAPI" "--add-dir" "../ANGULAR-STACK" "--add-dir" "../Repower.Lib.Shared"
                }
                pane cwd="CustomerPortal.Angular" command="claude" {
                    args "--dangerously-skip-permissions" "--add-dir" "../CustomerPortal.WebAPI" "--add-dir" "../ANGULAR-STACK" "--add-dir" "../Repower.Lib.Shared"
                }
            }
        }
    }

    tab name="2-front-nvim" cwd="CustomerPortal.Angular" {
        pane borderless=true command="/Users/cgpp/.local/share/bob/nvim-bin/nvim"
    }

    tab name="3-front-tools" cwd="CustomerPortal.Angular" {
        pane split_direction="vertical" {
            pane size="58%" split_direction="horizontal" {
                pane command="yazi" {
                    args "~/dev/CustomerPortal.Angular"
                }

                pane
            }

            pane size="42%" split_direction="horizontal" {
                pane focus=true command="pnpm" {
                    args "start"
                }

                pane command="pnpm" start_suspended=true {
                    args "i"
                }
            }
        }
    }

    tab name="4" { pane; }
    tab name="5" { pane; }

    tab name="6-time"  {
        pane borderless=true command="/Applications/work-tuimer-macos-aarch64"
    }
    tab name="7" { pane; }

    tab name="8" { pane; }

    tab name="9-back-tools" cwd="CustomerPortal.WebAPI" {
        pane split_direction="vertical" {
            pane size="58%" split_direction="horizontal" {
                pane command="yazi" {
                    args "~/dev/CustomerPortal.WebAPI"
                }

                pane
            }

            pane size="42%" split_direction="horizontal" {
                pane focus=true command="./run.sh"
                pane command="./run.sh"
            }
        }
    }

    tab name="0-back-nvim" cwd="CustomerPortal.WebAPI" {
        pane borderless=true command="/Users/cgpp/.local/share/bob/nvim-bin/nvim"
    }
}

scrollback_editor "/Users/cgpp/.local/share/bob/nvim-bin/nvim"
default_mode "locked"
